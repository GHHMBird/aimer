                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="@string/activity_match_record_more_relation_tv4"
                    android:textColor="@color/color_333333" />

                <ImageView
                    android:id="@+id/activity_match_record_more_relation_iv4"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/ring_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_match_record_more_relation_ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/view_press_bg"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="@string/activity_match_record_more_relation_tv5"
                    android:textColor="@color/color_333333" />

                <ImageView
                    android:id="@+id/activity_match_record_more_relation_iv5"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/ring_gray" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>