<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_history_deal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@color/colorBlack" />

        <TextView
            android:id="@+id/item_history_deal_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_history_deal_title"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:singleLine="true"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/item_history_deal_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_history_deal_time"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/item_history_deal_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_history_deal_desc"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_below="@id/item_history_deal_other"
            android:layout_width="match_parent"
            android:background="@color/color_f6f7f8"
            android:layout_height="@dimen/dp_1" />

    </RelativeLayout>

</RelativeLayout>