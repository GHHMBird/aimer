<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_10"
    android:paddingTop="@dimen/dp_15">

    <ImageView
        android:id="@+id/item_my_detail_icon"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_16"
        android:src="@mipmap/default_user" />

    <LinearLayout
        android:id="@+id/item_my_detail_top_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_toRightOf="@id/item_my_detail_icon"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_my_detail_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/item_my_detail_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jianbian_blue"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:paddingTop="@dimen/dp_2"
            android:text="@string/verified"
            android:textColor="@color/white"
            android:visibility="invisible" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_my_detail_write"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/transform">

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:src="@mipmap/other_pic" />

    </RelativeLayout>


    <TextView
        android:id="@+id/item_my_detail_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_my_detail_top_ll"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/item_my_detail_icon"
        android:maxLines="2" />

    <LinearLayout
        android:id="@+id/item_my_detail_authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_my_detail_company"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/item_my_detail_icon"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/becoming_a_certified_user"
            android:textColor="@color/color_2d02d3" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/renzheng" />

    </LinearLayout>

</RelativeLayout>