<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_other_fluid_ll"
            android:background="@drawable/view_press_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/textview_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="@dimen/dp_16"
                android:text="@string/other"
                android:textColor="@color/colorBlack" />

            <ImageView
                android:id="@+id/item_other_fluid_iv"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@drawable/ring_gray" />

        </LinearLayout>

        <com.buyint.mergerbot.view.FluidLayout
            android:id="@+id/item_other_fluid_fluid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16" />

    </LinearLayout>

</RelativeLayout>