<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_180"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">

            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="match_parent"
                android:background="@drawable/item_left_app_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_right_white_color"
                android:orientation="vertical">

                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:gravity="top">

                    <TextView
                        android:id="@+id/item_result2_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_18" />

                    <LinearLayout
                        android:id="@+id/item_result2_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/item_result2_iv_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_5"
                            android:src="@mipmap/three_cicle" />

                    </LinearLayout>

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/price" />

                    <TextView
                        android:id="@+id/item_result2_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dp_8"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_7b7b86"
                        android:textSize="@dimen/text_12" />

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/type" />

                    <TextView
                        android:id="@+id/item_result2_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dp_8"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_7b7b86"
                        android:textSize="@dimen/text_12" />

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/place" />

                    <TextView
                        android:id="@+id/item_result2_place"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dp_8"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_7b7b86"
                        android:textSize="@dimen/text_12" />

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/industry" />

                    <TextView
                        android:id="@+id/item_result2_industry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dp_8"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_7b7b86"
                        android:textSize="@dimen/text_12" />

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:gravity="center_vertical">

                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/comefrom" />

                    <TextView
                        android:id="@+id/item_result2_come"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:drawablePadding="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_3"
                        android:textColor="@color/color_cccccc"
                        android:textSize="@dimen/text_10" />

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>