<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/rentage_white">

        <ImageView
            android:id="@+id/item_invite_lawyer_iv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:text="艾伦资本|执行总裁"
            android:id="@+id/item_invite_lawyer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18"
            app:layout_constraintLeft_toRightOf="@id/item_invite_lawyer_iv"
            app:layout_constraintTop_toTopOf="@id/item_invite_lawyer_iv" />

        <TextView
            android:text="--11-"
            android:id="@+id/item_invite_lawyer_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            app:layout_constraintLeft_toLeftOf="@id/item_invite_lawyer_name"
            app:layout_constraintTop_toBottomOf="@id/item_invite_lawyer_name" />

        <ImageView
            android:id="@+id/item_invite_lawyer_come_from_iv"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="@id/item_invite_lawyer_company"
            app:layout_constraintTop_toBottomOf="@id/item_invite_lawyer_company" />

        <TextView
            android:text="来自"
            android:id="@+id/item_invite_lawyer_come_from_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:textSize="@dimen/text_10"
            app:layout_constraintBottom_toBottomOf="@id/item_invite_lawyer_come_from_iv"
            app:layout_constraintLeft_toRightOf="@id/item_invite_lawyer_come_from_iv"
            app:layout_constraintTop_toTopOf="@id/item_invite_lawyer_come_from_iv" />

        <TextView
            android:text="23222"
            android:id="@+id/item_invite_lawyer_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/rentage_appcolor_corner"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:textColor="@color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>