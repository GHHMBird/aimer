<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/pop_bg"
        android:paddingRight="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/popup_item_match_record_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/add" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/add_friend"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_18" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_item_match_record_upload_address_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_item_match_record_add_friend"
            android:elevation="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/upload_address_book" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/update_address_book"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_18" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_item_match_record_scanning_business_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_item_match_record_upload_address_book"
            android:elevation="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/scan_business_card" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/scanning_business_card"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_18" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_item_match_record_scanning_qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_item_match_record_scanning_business_card"
            android:elevation="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/scan_qr_code" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/scanning_qr_code"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_18" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_item_match_record_match_near_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_item_match_record_scanning_qr_code"
            android:elevation="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/match_nearby" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/match_nearby"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_18" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_item_match_record_my_qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_item_match_record_match_near_by"
            android:elevation="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/qr_code" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/my_qr_code"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_18" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>