<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_320"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/rentage_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/matching_degree_analyse"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_18" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_16">

        <LinearLayout
            android:id="@+id/layout_match_analyse_industry_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/cicle_2702bb"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/industry"
                android:textSize="@dimen/text_10" />

            <TextView
                android:id="@+id/layout_match_analyse_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/text_20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_match_analyse_price_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/cicle_8f8ff9"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/price"
                android:textSize="@dimen/text_10" />

            <TextView
                android:id="@+id/layout_match_analyse_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/text_20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_match_analyse_product_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/cicle_4da3f7"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/product"
                android:textSize="@dimen/text_10" />

            <TextView
                android:id="@+id/layout_match_analyse_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/text_20" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_220"
        android:layout_centerInParent="true">

        <com.buyint.mergerbot.view.chart.charts.PieChart
            android:id="@+id/layout_match_analyse_piechart"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_220">

        </com.buyint.mergerbot.view.chart.charts.PieChart>

        <ImageView
            android:id="@+id/layout_match_analyse_iv"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_220"
            android:background="@mipmap/match_product_pie" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_match_analyse_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:gravity="center"
                android:textSize="@dimen/text_20" />

            <TextView
                android:id="@+id/layout_match_analyse_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:gravity="center"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>