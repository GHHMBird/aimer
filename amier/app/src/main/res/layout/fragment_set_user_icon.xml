<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_set_user_icon_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cc00">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_36">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:src="@mipmap/fragment_set_user_icon_iv" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/color_f6f7f8" />

        <TextView
            android:id="@+id/fragment_set_user_icon_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/take_photo"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_f6f7f8" />

        <TextView
            android:id="@+id/fragment_set_user_icon_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/local_album"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_f6f7f8" />

        <TextView
            android:id="@+id/fragment_set_user_icon_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/cancel"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18" />

    </LinearLayout>

</RelativeLayout>