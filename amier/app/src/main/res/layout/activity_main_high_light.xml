<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30">

        <RelativeLayout
            android:id="@+id/activity_high_light_item_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_top_white_color"
            android:paddingBottom="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20">

            <ImageView
                android:id="@+id/activity_high_light_item_iv"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/xinshouzhiyin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/activity_high_light_item_iv"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@id/activity_high_light_item_iv"
                android:text="@string/click_bottom_button"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/activity_high_light_item_iv"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@id/activity_high_light_item_iv"
                android:text="@string/update_project_manager"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_20" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/color_cccccc"
            android:layout_height="@dimen/dp_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_high_light_item_top"
            android:background="@drawable/item_bottom_white_color"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/i_know"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_20" />

    </LinearLayout>
</RelativeLayout>