<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:voiceView="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/toolbar_white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_f6f7f8"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/activity_match_record_result_data_rl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/activity_match_record_result_one_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_16"
                                android:layout_marginTop="@dimen/dp_10"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_24" />

                            <TextView
                                android:id="@+id/activity_match_record_result_two_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/activity_match_record_result_one_tv"
                                android:layout_marginStart="@dimen/dp_16"
                                android:layout_marginTop="@dimen/dp_6"
                                android:textSize="@dimen/text_18" />

                            <LinearLayout
                                android:id="@+id/activity_match_record_result_ll"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_90"
                                android:layout_below="@id/activity_match_record_result_two_tv"
                                android:layout_marginTop="@dimen/dp_10"
                                android:elevation="@dimen/dp_2"
                                android:gravity="center_vertical">

                                <com.buyint.mergerbot.view.SelectableBackgroundView
                                    android:id="@+id/activity_match_record_result_sbv1"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_90"
                                    android:layout_marginLeft="@dimen/dp_16"
                                    android:layout_weight="1"
                                    android:background="@color/color_f6f7f8"
                                    app:sb_isCheck="true"
                                    app:sb_normalColor="@drawable/item_left_white_color"
                                    app:sb_selectedColor="@drawable/item_app_rentage_corner"
                                    app:sb_size="@dimen/dp_16">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="@dimen/dp_2"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_10">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_5"
                                            android:gravity="bottom">

                                            <TextView
                                                android:id="@+id/activity_match_record_result_tv1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="0"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/text_20" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="@string/ge"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/text_10" />

                                        </LinearLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_5"
                                            android:gravity="center"
                                            android:text="@string/business_friend"
                                            android:textColor="@color/color_b6b6b6"
                                            android:textSize="@dimen/text_10" />

                                    </LinearLayout>

                                </com.buyint.mergerbot.view.SelectableBackgroundView>

                                <com.buyint.mergerbot.view.SelectableBackgroundView
                                    android:id="@+id/activity_match_record_result_sbv2"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_90"
                                    android:layout_weight="1"
                                    android:background="@color/color_f6f7f8"
                                    app:sb_normalColor="@color/white"
                                    app:sb_selectedColor="@drawable/item_app_rentage_corner"
                                    app:sb_size="@dimen/dp_16">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="@dimen/dp_2"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_10">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_5"
                                            android:gravity="bottom">

                                            <TextView
                                                android:id="@+id/activity_match_record_result_tv2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="0"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/text_20" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="@string/ge"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/text_10" />

                                        </LinearLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_5"
                                            android:gravity="center"
                                            android:text="@string/work_mate"
                                            android:textColor="@color/color_b6b6b6"
                                            android:textSize="@dimen/text_10" />

                                    </LinearLayout>
                                </com.buyint.mergerbot.view.SelectableBackgroundView>

                                <com.buyint.mergerbot.view.SelectableBackgroundView
                                    android:id="@+id/activity_match_record_result_sbv3"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_90"
                                    android:layout_marginRight="@dimen/dp_16"
                                    android:layout_weight="1"
                                    android:background="@color/color_f6f7f8"
                                    app:sb_normalColor="@drawable/item_right_white_color"
                                    app:sb_selectedColor="@drawable/item_app_rentage_corner"
                                    app:sb_size="@dimen/dp_16">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="@dimen/dp_2"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_10">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_5"
                                            android:gravity="bottom">

                                            <TextView
                                                android:id="@+id/activity_match_record_result_tv3"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="0"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/text_20" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="@string/ge"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/text_10" />

                                        </LinearLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_5"
                                            android:gravity="center"
                                            android:text="@string/work_mate_team"
                                            android:textColor="@color/color_b6b6b6"
                                            android:textSize="@dimen/text_10" />

                                    </LinearLayout>
                                </com.buyint.mergerbot.view.SelectableBackgroundView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/activity_match_record_result_ll"
                                android:orientation="vertical">

                                <android.support.v4.view.ViewPager
                                    android:id="@+id/activity_match_record_result_viewpager"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/activity_match_record_result_no_data_rl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/activity_match_record_result_no_data_iv"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_200"
                                android:layout_marginTop="@dimen/dp_50"
                                android:src="@mipmap/activity_match_record_splash" />

                            <TextView
                                android:id="@+id/activity_match_record_result_no_data_tv1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/activity_match_record_result_no_data_iv"
                                android:layout_marginTop="@dimen/dp_10"
                                android:gravity="center"
                                android:text="@string/no_found_try_deep_search"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_20" />

                            <TextView
                                android:id="@+id/activity_match_record_result_no_data_tv2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/activity_match_record_result_no_data_tv1"
                                android:layout_marginTop="@dimen/dp_10"
                                android:gravity="center"
                                android:text="@string/input_more_and_search_more"
                                android:textSize="@dimen/text_18" />

                            <com.buyint.mergerbot.view.SelectableBackgroundView
                                android:id="@+id/activity_match_record_result_sbv_no_data"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:layout_below="@id/activity_match_record_result_no_data_tv2"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_marginRight="@dimen/dp_16"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@color/color_f6f7f8"
                                app:sb_isCheck="true"
                                app:sb_normalColor="@drawable/item_rentage_gray_corner_reverse"
                                app:sb_selectedColor="@drawable/item_app_rentage_corner"
                                app:sb_size="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="@string/precise_search" />

                            </com.buyint.mergerbot.view.SelectableBackgroundView>

                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transform">

                        <RelativeLayout
                            android:id="@+id/activity_match_record_bottom_rl"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/jianbian_blue"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/activity_match_record_speak"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_40"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:src="@mipmap/speak3" />

                                <com.buyint.mergerbot.view.DeleteEditText
                                    android:id="@+id/activity_match_record_et"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/dp_6"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_6"
                                    android:layout_weight="1"
                                    android:background="@drawable/et_bg"
                                    android:paddingLeft="@dimen/dp_9"
                                    android:paddingRight="@dimen/dp_9"
                                    android:textColor="@color/color_c9c2e5"
                                    android:textColorHint="@color/color_c9c2e5"
                                    android:textCursorDrawable="@drawable/text_input_edit_text_white_cursor"
                                    android:textSize="@dimen/text_14" />

                                <TextView
                                    android:id="@+id/activity_match_record_tv_send"
                                    android:layout_width="@dimen/dp_50"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/dp_10"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:gravity="center"
                                    android:text="@string/send"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_18"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/activity_match_record_iv_nine"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_40"
                                    android:layout_marginBottom="@dimen/dp_10"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:src="@mipmap/add_cicle" />

                            </LinearLayout>

                        </RelativeLayout>

                        <GridView
                            android:id="@+id/activity_match_record_bottom_grid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/activity_match_record_bottom_rl"
                            android:background="@drawable/jianbian_blue2"
                            android:numColumns="3"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/activity_match_record_mengceng2_center_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_150"
                    android:background="@color/color_f6f7f8">

                    <TextView
                        android:id="@+id/activity_match_record_mengceng2_center_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_80"
                        android:gravity="center"
                        android:text="@string/please_speak_people_you_want_search"
                        android:textColor="@color/color_333333" />

                </RelativeLayout>

                <com.buyint.mergerbot.view.VoiceLineView
                    android:id="@+id/activity_match_record_voiceline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_f6f7f8"
                    voiceView:fineness="two"
                    voiceView:maxVolume="100"
                    voiceView:viewMode="line" />

                <FrameLayout
                    android:id="@+id/activity_match_record_fl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>