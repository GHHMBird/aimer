<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5">

        <RelativeLayout
            android:id="@+id/item_change_user_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_change_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@drawable/drawable_tv_eva_app_color"
                android:elevation="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:paddingTop="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <EditText
                android:id="@+id/item_change_user_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@drawable/drawable_tv_eva_app_color"
                android:elevation="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:paddingTop="@dimen/dp_5"
                android:textColor="@color/white"
                android:textColorHint="@color/color_999999"
                android:textCursorDrawable="@drawable/text_input_edit_text_white_cursor"
                android:textSize="@dimen/text_14"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_change_user_tv_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_change_user_rl"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/modified_complete" />

    </RelativeLayout>

</RelativeLayout>