<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f7f8">

    <include
        android:id="@+id/activity_business_file_top"
        layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_business_file_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:background="?attr/app_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/activity_business_file_user_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/activity_business_file_person_bg">

                    <View
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_30"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_59"
                        android:background="@color/colorRed" />

                    <ImageView
                        android:layout_width="@dimen/dp_74"
                        android:layout_height="@dimen/dp_74"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/cicle_f4f5f7" />

                    <ImageView
                        android:id="@+id/activity_business_file_user_icon"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_12"
                        android:src="@mipmap/default_user" />

                    <LinearLayout
                        android:id="@+id/activity_business_file_name_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_business_file_user_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/activity_business_file_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_18" />

                        <ImageView
                            android:id="@+id/activity_business_file_renzheng"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:src="@mipmap/renzheng" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/activity_business_file_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_business_file_name_ll"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_8" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_business_file_company"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/commercial_reputation"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:id="@+id/activity_business_file_commercial_reputation_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_15"
                            android:background="@color/colorRed"
                            android:paddingLeft="@dimen/dp_2"
                            android:paddingRight="@dimen/dp_2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:id="@+id/activity_business_file_exceed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_12" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/introduction"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/activity_business_file_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_10" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_business_file_personal_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/textview_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:text="@string/personal_overview"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10">

                        <TextView
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="wrap_content"
                            android:text="@string/division_of_labor" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/activity_business_file_hint1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10">

                        <TextView
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="wrap_content"
                            android:text="@string/industry_subdivision" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/activity_business_file_hint2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10">

                        <TextView
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="wrap_content"
                            android:text="@string/work_email" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/aimer_default_email" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10">

                        <TextView
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="wrap_content"
                            android:text="@string/company_web" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/aimer_default_website" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10">

                        <TextView
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="wrap_content"
                            android:text="@string/work_place" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/please_write_work_place" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_business_file_project_performance_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text="@string/project_performance"
                        android:textColor="@color/colorBlack" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/color_f6f7f8" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/activity_business_file_project_performance_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_business_file_business_activity_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text="@string/business_activity"
                        android:textColor="@color/colorBlack" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/color_f6f7f8" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/activity_business_file_business_activity_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_1" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/activity_business_file_language_skill_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/view_press_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/textview_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:text="@string/language_skill"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>

                    <com.buyint.mergerbot.view.FluidLayout
                        android:id="@+id/activity_business_file_language_skill_fl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_business_file_focus_area_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/view_press_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/textview_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:text="@string/focus_area"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>

                    <com.buyint.mergerbot.view.FluidLayout
                        android:id="@+id/activity_business_file_focus_area_fl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16" />

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_business_file_education_experience_tv"
                    style="@style/textview_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:paddingStart="@dimen/dp_16"
                    android:text="@string/educational_experience"
                    android:textColor="@color/colorBlack" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_business_file_education_experience_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1" />

                <LinearLayout
                    android:id="@+id/activity_business_file_extra_information_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/view_press_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/textview_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:text="@string/extra_information"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/activity_business_file_extra_information_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:hint="@string/please_write_your_patents_or_publication" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/activity_business_file_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_business_file_top" />

</RelativeLayout>