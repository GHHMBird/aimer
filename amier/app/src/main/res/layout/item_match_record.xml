<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:transitionName="match_record_detail_trans">

        <LinearLayout
            android:id="@+id/item_match_record_itemview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/item_match_record_transaction_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/item_match_record_app_color_view"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="match_parent"
                    android:background="@drawable/item_left_app_color" />

                <LinearLayout
                    android:id="@+id/item_match_record_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/item_match_record_reliable_rl"
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_70"
                            android:layout_marginLeft="@dimen/dp_10">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/match_record_reliable" />

                            <TextView
                                android:id="@+id/item_match_record_match_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:shadowColor="@color/color_0606cc"
                                android:shadowRadius="2"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_18"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/item_match_record_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_toRightOf="@id/item_match_record_reliable_rl"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_16" />

                        <ImageView
                            android:id="@+id/item_match_record_pic"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_24"
                            android:src="@mipmap/tuandui"
                            android:layout_alignTop="@id/item_match_record_name"
                            android:layout_toRightOf="@id/item_match_record_name"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/item_match_record_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/item_match_record_name"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toRightOf="@id/item_match_record_reliable_rl" />

                        <LinearLayout
                            android:id="@+id/item_match_record_more"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/view_press_bg">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_5"
                                android:paddingLeft="@dimen/dp_15"
                                android:paddingRight="@dimen/dp_5"
                                android:paddingTop="@dimen/dp_5"
                                android:src="@mipmap/three_cicle_shu" />

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@id/item_match_record_reliable_rl"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/item_match_record_match_project_ll"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/item_match_record_match_project_tv"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="@string/matching_his_project"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/item_match_record_match_project"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_18" />

                        </LinearLayout>

                        <View
                            android:id="@+id/item_match_record_line1"
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/color_f6f7f8" />

                        <LinearLayout
                            android:id="@+id/item_match_record_friend_ll"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/item_match_record_friend_tv"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="@string/business_friend"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/item_match_record_friend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_18" />
                        </LinearLayout>

                        <View
                            android:id="@+id/item_match_record_line2"
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/color_f6f7f8" />

                        <LinearLayout
                            android:id="@+id/item_match_record_client_ll"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="@string/client"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/item_match_record_client"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_18" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_match_record_client_news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:singleLine="true" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>