<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UIs.loginAndRegister.activity.RegisterLoginActivity">

    <com.buyint.mergerbot.view.CustomVerticalViewPager
        android:id="@+id/activity_register_login_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent" />

    <FrameLayout
        android:id="@+id/activity_register_login_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/activity_register_login_ps_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_cc00"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/activity_register_login_ps_bg_ll"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_200"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_20">


            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_200"
                android:src="@mipmap/jiantou" />

            <ImageView
                android:id="@+id/activity_register_login_ps_head"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/head" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_register_login_ps_bg_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/turn_down_and_return_step"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />

    </RelativeLayout>

</RelativeLayout>