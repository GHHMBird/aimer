<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:gravity="center_vertical">

        <View
            android:id="@+id/item_match_detail_line_top"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_15"
            android:layout_alignLeft="@id/item_match_detail_cicle"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/dp_6"
            android:background="@color/color_cccccc" />

        <ImageView
            android:id="@+id/item_match_detail_cicle"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:elevation="@dimen/dp_3"
            android:background="@drawable/cicle_gray" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_16"
            android:elevation="@dimen/dp_3"
            android:src="@drawable/white_app_color_cicle" />

        <View
            android:id="@+id/item_match_detail_line_bottom"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_63"
            android:layout_alignLeft="@id/item_match_detail_cicle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/item_match_detail_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_match_detail_cicle"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18" />

        <TextView
            android:id="@+id/item_match_detail_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_match_detail_tv1"
            android:layout_alignLeft="@id/item_match_detail_tv1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            android:maxLines="2"
            android:textColor="@color/color_cccccc"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>
</LinearLayout>